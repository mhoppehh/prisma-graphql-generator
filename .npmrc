registry=https://registry.npmjs.org/
# Optional: Scope for organization packages
# @your-org:registry=https://registry.npmjs.org/

# Save exact versions instead of using semver ranges
save-exact=true

# Automatically save dependencies to package.json
save=true

# Use production optimizations
production=false

# Progress bar for downloads
progress=true

# Optional: Configure cache location
# cache=~/.npm

# Optional: Set npm log level
# loglevel=info